<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ares login</title>
    <link rel="stylesheet" href="/styles/style-login.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">

</head>
<body>
    <section>

        <div class="container">
            <div class="user signinBx">
                <div class="imgBx"> <img src="/images/img2.jpeg"> </div>
                <div class="formBx">
                    <form id="signIn" action="/signIn"  method="post">
                        <h1>Sign in</h1>
                        <div class="form_email" >
                            <input type="text" name="email" id="email" placeholder="E-mail Adress" onkeyup="validate()" required>
                    
                        </div>
                        <input type="password" name="password" id="password"  placeholder="Password" required>
                        <input type="submit" value="Login">
                       
                        <p class="signup">Don't have an account? 
                            <a href="#" onclick="toggleForm()">Sign up as a User.</a>
                            or as a <a href="/partner-register"> partner </a>
                        </p>
                    </form>
                </div>
            </div>  
            
            <div class="user signupBx">
                <div class="imgBx"> <img src="/images/img1.gif"> </div>
                <div class="formBx">

                    <form action="/signup" id="form_signup" method="post">
                        <h1>Create an account</h1>
                        
                        <input type="text" name="userName" id="userName" placeholder="Name" required>
                        <input type="text" name="email" id="email" placeholder="E-mail Adress" required>
                        <input type="password" name="password" id="password" placeholder="Create password" required>
                        <input type="password" name="password2" id="password2" placeholder="Confirm password">
                        <input type="submit" value="Create"> 

                        <p class="signup">aleready have an account? 
                            <a href="#" onclick="toggleForm()">Sign in.</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
        <div id="popup">
            <div class= "content">
                <img src="#">
                <h2>Congratulations your are a nem member!</h2>
                <p>Welcome to Ares</p>
                
                <div class="inputBox">
                    <input type="submit" value="OK" onclick="popupToggle()" class="btn">
                </div>    
            </div>
            <a class="close" onclick="popupToggle()">
                <img src="/images/menu/iconfinder_exit-delete-remove-close-x_2931151 (1).png">
            </a>
        </div>
        
    </section>

    <script>
        function toggleForm(){
            container = document.querySelector('section');
            container = document.querySelector('.container');
            container.classList.toggle('active');     
        }

        function popupToggle(){
                const popup = document.getElementById('popup');
                popup.classList.toggle('active')
        }

        function validate(){
              const form = document.getElementById('signIn');
              const mailSignIn = document.getElementById('email'); 
              const checkPattern = /^[^ ]+@[^ ]+\.[a-z]{2,3}$/;

              if(mailSignIn.match(checkPattern)){
                  form.classList.add('valid');

              }else {
                   form.classList.remove('valid');
              }
          

        }
    </script>    
    
    <!--===== MAIN JS =====-->
    <script src="/Js/main.js"></script>
</body>
</html>